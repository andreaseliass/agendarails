<p id="notice"><%= notice %></p>

<h1>Listando Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.celular %></td>
        <td><%= link_to 'Mostrar', contato %></td>
        <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
        <td><%= link_to 'Deletar', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Contato', new_contato_path %>
